{{!-- Dashboard Page --}}
<section class="dashboard">
  <h2>Create New Post</h2>

  <form class="new-post-form">
    <div>
      <label class="post_title" for="post-title">Title</label>
      <input type="text" id="post-title" name="post-title" />
    </div>
    <div>
      <label class="post_desc" for="post-text">Description</label>
      <textarea name="post-text"></textarea>
    </div>
    <button type="submit" class="submit-button" id="submit-button">Create</button>
  </form>

</section>

{{#if posts.length}}
<section class = "your-posts">
  <h2>Your Posts</h2>
  <ul>

    {{#each posts}}
    <li>
        <article class="post">
            <div class="title">
                <a href="/post/{{id}}"><h2>{{title}}</h2></a>
            </div>
            <div class="post_text">
              <p class="post_text">{{post_text}}</p>
            </div>
            <div class="date">
                by {{user.username}} on {{format_date created_at}}
            </div>
            <div class ='edit'>
                <a href="/dashboard/edit/{{id}}" class="edit-link">Edit Post</a>
            </div>
        </article>
    </li>
    {{/each}}

  </ul>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>